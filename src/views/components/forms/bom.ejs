<form id="bomForm">
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck" />
      <label class="form-check-label" for="gridCheck">Add to Project</label>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="partProject">Project</label>
        <input
          type="text"
          class="form-control"
          id="partProject"
          placeholder="e.g. MasterBom"
        />
      </div>
      <div class="form-group col-md-2">
        <label for="inputZip">Quantity</label>
        <input
          type="number"
          class="form-control"
          id="partQuantity"
          placeholder="0"
          min="0"
        />
      </div>
    </div>
  </div>
</form>
