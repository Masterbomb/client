<form id="partForm">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="partName">Name</label>
      <input
        type="text"
        class="form-control"
        id="partName"
        placeholder="e.g. CD4511BE"
      />
    </div>
    <div class="form-group col-md-4">
      <label for="partUnitPrice">Unit Price</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">$</div>
        </div>
        <input
          type="number"
          class="form-control"
          id="partUnitPrice"
          step="0.01"
          min="0"
          placeholder="0.00"
        />
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="partDesc">Description</label>
    <textarea
      class="form-control"
      id="partDesc"
      rows="2"
      placeholder="e.g. 7-segment display driver"
    ></textarea>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="supplierName">Supplier</label>
      <select
        class="form-control selectpicker"
        id="supplier-picker"
        data-live-search="true"
      >
        <option value="" selected disabled>Select Supplier</option>
      </select>
    </div>
    <div class="form-group col-md-6">
      <label for="manufacturerName">Manufacturer</label>
      <select
        class="form-control selectpicker"
        id="manufacturer-picker"
        data-live-search="true"
      >
        <option value="" selected disabled>Select Mannufacturer</option>
      </select>
    </div>
  </div>
</form>
