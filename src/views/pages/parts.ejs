<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css"
    />

    <%- include('../components/head') %>
  </head>
  <header><%- include('../components/nav') %></header>
  <body>
    <div class="container-fluid">
      <h1>
        Parts
        <small class="text-muted"> Universal parts list</small>
      </h1>
      <div id="toolbar">
        <%- include('../components/buttons/addbtn', {id: "addPart"}) %> <%-
        include('../components/buttons/editbtn', {id:"editPart"}) %> <%-
        include('../components/buttons/deletebtn', {id: "deletePart"}) %>
      </div>
      <div class="table-responsive-sm">
        <table
          id="partsTable"
          class="table table-dark table-bordered table-hover"
          data-checkbox-header="true"
          data-click-to-select="true"
          data-search="true"
          data-loading-template="loading_template"
          data-toolbar="#toolbar"
        >
          <thead>
            <tr>
              <th data-field="state" data-checkbox="true"></th>
              <th data-field="id" scope="col">ID</th>
              <th data-field="name" scope="col">Part</th>
              <th data-field="description" scope="col">Description</th>
              <th data-field="unit_price" scope="col">Unit Price ($)</th>
              <th data-field="supplier" scope="col">Supplier</th>
              <th data-field="manufacturer" scope="col">Manufacturer</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
    <%- include('../components/modal', {form: 'parts'}) %>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
      integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>
    <script src="/js/parts.js"></script>
  </body>
  <%- include('../components/footer') %>
</html>
