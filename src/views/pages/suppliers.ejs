<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %> 
  </head>
  <header>
    <%- include('../partials/header') %> 
  </header>
  <body>
    <div class="container-fluid">
      <h1>
        Suppliers
        <small class="text-muted"> List of part retailers</small>
      </h1>
      <div class="table-ctrl">
        <button type="button" class="btn btn-success btn-lg">Add</button> 
        <button type="button" class="btn btn-secondary btn-lg">
          <span class="octicon octicon-clippy"></span>
          Edit
        </button> 
        <button type="button" class="btn btn-danger btn-lg">+</button> 
      </div>
      <div class="table-responsive-sm">
        <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Supplier</th>
            <th scope="col">Website</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < suppliers.length; i++) { %>
            <tr>
              <td><%= suppliers[i].name %></td>
              <td><a href="http://<%= suppliers[i].website %>"><%= suppliers[i].website %></a></td>
            </tr> 
          <% } %>
        </tbody>
        </table>
      </div>
    </div>
  </body>
  <footer>
    <%- include('../partials/footer') %> 
  </footer>
</html>